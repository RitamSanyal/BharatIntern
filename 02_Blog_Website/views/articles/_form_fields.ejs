<div class="form-group">
    <label style="color: aliceblue;" for="title">Title</label>
    <input style="background-color: rgb(74, 132, 219);" required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label style="color: aliceblue;" for="description">Description</label>
    <textarea style="background-color: rgb(74, 132, 219);" name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label style="color: aliceblue;" for="markdown">Markdown</label>
    <textarea style="background-color: rgb(74, 132, 219);" required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-2">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save</button>